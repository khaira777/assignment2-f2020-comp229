<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--content for add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter name" name="name" value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Contact Number</label>
                    <input type="text" class="form-control" id="numberTextField" placeholder="Enter contact number" name="number" value="<%= contact.number %>"
                    required>
                </div>

                <div class="form-group">
                        <label for="emailTextField">Email address</label>
                        <input type="text" class="form-control" id="emailTextField" placeholder="Enter email address" name="email" value="<%= contact.email %>"
                        required>
                </div>
                <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> Submit</button>
                    
                        <a href="/contact-list" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>
  
<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>